@page "{id:int}"
@model BadmintonCenter.Presentation.Pages.Customer.Packages.DetailModel
@{
    ViewData["Title"] = "Package Detail";
}

<div class="container py-5">
    <h1 class="text-center">Package Detail</h1>
    <div class="row">
        <div class="col-lg-4">
            <img src="https://www.phucanh.vn/media/news/1310_premium-la-gi-cac-ung-dung-noi-tieng-co-goi-premium-hien-nay-1.jpg"
                 class="img-fluid"
                 alt="Product Image" />
        </div>
        <div class="col-lg-8">
            <h2 class="fw-bold">@Model.Package!.PackageName</h2>
            <p class="text-muted"><span class="text-secondary"><span class="fw-bold">Room type:</span> @Model.Package.Description</span></p>
            <span class="text-secondary"><span class="fw-bold">Capacity:</span> @Model.Package.HourIncluded</span>
            <h4 class="my-2"><span class="fw-bold">Price:</span> $@Math.Truncate((decimal)Model.Package.Price!) / day</h4>
            <div class="form-group mt-3">
                <input type="submit" value="Confirm buy" class="btn btn-primary" />
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
            </div>
        </div>
    </div>
</div>


