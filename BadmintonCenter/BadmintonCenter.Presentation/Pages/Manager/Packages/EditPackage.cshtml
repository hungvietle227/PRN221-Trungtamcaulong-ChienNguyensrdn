@page
@model BadmintonCenter.Presentation.Pages.Manager.Packages.EditPackageModel
@{
    Layout = "_LayoutManager";
    var dateNow = DateTime.Now.ToString("yyyy-MM-dd");
}

<h4>Edit Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Package.PackageId" />
            <div class="form-group mt-3">
                <label class="control-label">Package Name</label>
                <input asp-for="Package.PackageName" class="form-control" />
                <span asp-validation-for="Package.PackageName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Description</label>
                <input asp-for="Package.Description" class="form-control" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Package.HourIncluded"></label>
                <select required class="form-select" aria-label="Default select example" asp-for="Package.HourIncluded" asp-items="@BadmintonCenter.Presentation.Pages.Manager.Packages.AddPackageModel.SelectHours()">
                </select>
                <span asp-validation-for="Package.HourIncluded" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Price</label>
                <input asp-for="Package.Price" class="form-control" />
                <span asp-validation-for="Package.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-secondary" asp-page="/Manager/ViewPackage">Back to List</a>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
