@page "{id:int}"
@model BadmintonCenter.Presentation.Pages.Customer.Packages.DetailModel
@{
    ViewData["Title"] = "Package Detail";
}

<div class="container py-5">
    <h1 class="text-center">Package Detail</h1>
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-4">
            <img src="https://www.phucanh.vn/media/news/1310_premium-la-gi-cac-ung-dung-noi-tieng-co-goi-premium-hien-nay-1.jpg"
                 class="img-fluid"
                 alt="Product Image" />
        </div>
        <form method="post">
            <div class="col-lg-12 text-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Package.PackageId" />
                <div class="form-group mt-3">
                    <label class="control-label"><strong>Package Name:</strong> @Model.Package.PackageName</label>
                    <input asp-for="Package.PackageName" class="form-control" hidden/>
                    <span asp-validation-for="Package.PackageName"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label"><strong>Description:</strong> @Model.Package.Description</label>
                    <input asp-for="Package.Description" class="form-control" hidden/>
                    <span asp-validation-for="Package.Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label"><strong>Hour included:</strong> @Model.Package.HourIncluded</label>
                    <input asp-for="Package.HourIncluded" hidden/>
                    <span asp-validation-for="Package.HourIncluded" class="text-danger" hidden></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label"><strong>Price:</strong> @Model.Package.Price</label>
                    <input asp-for="Package.Price" class="form-control" hidden />
                    <span asp-validation-for="Package.Price" class="text-danger"></span>
                </div>
                
                <div class="d-flex flex-row pb-3 justify-content-center align-items-center gap-2 mt-2">
                    <div class="ms-3"><strong>Payment method:</strong></div>
                    <div class="rounded border d-flex w-25 p-3 align-items-center">
                        <p class="mb-0">
                            <i class="bi bi-credit-card-fill"></i> VNPAY
                        </p>
                        <div class="ms-auto">970419xxxxxxxxxxxxx</div>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center gap-3 mt-3">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Confirm buy</button>
                    </div>
                    <div>
                        <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


