@page
@model BadmintonCenter.Presentation.Pages.Manager.Packages.DeletePackageModel
@{
    Layout = "_LayoutManager";
    var dateNow = DateTime.Now.ToString("yyyy-MM-dd");
}
<h3 class="mt-1">Are you sure you want to delete this?</h3>
<div class="mt-3">
    <h4>Package Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageInformation.PackageId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageInformation.PackageId)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PackageInformation.PackageName)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.PackageInformation.PackageName)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PackageInformation.Description)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.PackageInformation.Description)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PackageInformation.HourIncluded)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.PackageInformation.HourIncluded)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PackageInformation.Price)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.PackageInformation.Price)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PackageInformation.PackageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-page="/Manager/ViewPackage">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
