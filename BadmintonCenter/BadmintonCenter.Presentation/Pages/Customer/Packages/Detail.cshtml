@page "{id:int}"
@model BadmintonCenter.Presentation.Pages.Customer.Packages.DetailModel
@{
    ViewData["Title"] = "Package Detail";
}

<div class="container py-5">
    <h1 class="text-center">Package Detail</h1>
    <div class="row">
        <div class="col-lg-4">
            <img src="https://www.phucanh.vn/media/news/1310_premium-la-gi-cac-ung-dung-noi-tieng-co-goi-premium-hien-nay-1.jpg"
                 class="img-fluid"
                 alt="Product Image" />
        </div>
        <form method="post">
            <div class="col-lg-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Package.PackageId" />
                <div class="form-group mt-3">
                    <label class="control-label">Package Name: @Model.Package.PackageName</label>
                    <input asp-for="Package.PackageName" class="form-control" hidden/>
                    <span asp-validation-for="Package.PackageName"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label">Description: @Model.Package.Description</label>
                    <input asp-for="Package.Description" class="form-control" hidden/>
                    <span asp-validation-for="Package.Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label">Hour included: @Model.Package.HourIncluded</label>
                    <input asp-for="Package.HourIncluded" hidden/>
                    <span asp-validation-for="Package.HourIncluded" class="text-danger" hidden></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label">Price: @Model.Package.Price</label>
                    <input asp-for="Package.Price" class="form-control" hidden />
                    <span asp-validation-for="Package.Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary" >Confirm buy</button>
                </div>
                <div>
                    <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


