<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Cầu lông</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN221_JewelryShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="/css/sidebar.css">
</head>
<body>
    <div style="height: 90vh; position: relative; top: 0">
        <div class="container_sidebar">
            <div class="sidebar">
                <div class="header_container">
                    <img src="@Url.Content("~/path/to/logoEdu.png")" alt="avatar logo" width="75" />
                    <div class="header_sidebar">Trung tâm cầu lông</div>
                </div>
                <hr style="border: 1px solid white;" />
                <ul class="sidebar-nav">
                    <li class="sidebar-nav-item">
                        <a asp-page="/Admin/AdminHome" class="sidebar-nav-link">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                                    <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5" />
                                </svg>
                                Home
                            </p>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a asp-page="/Admin/ViewUser" class="sidebar-nav-link">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-collection-fill" viewBox="0 0 16 16">
                                    <path d="M0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6zM2 3a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 0-1h-11A.5.5 0 0 0 2 3m2-2a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7A.5.5 0 0 0 4 1" />
                                </svg>
                                User management
                            </p>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a asp-page="/Admin/ViewCourt" class="sidebar-nav-link">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm-fill" viewBox="0 0 16 16">
                                    <path d="M6 .5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1H9v1.07a7.001 7.001 0 0 1 3.274 12.474l.601.602a.5.5 0 0 1-.707.708l-.746-.746A6.97 6.97 0 0 1 8 16a6.97 6.97 0 0 1-3.422-.892l-.746.746a.5.5 0 0 1-.707-.708l.602-.602A7.001 7.001 0 0 1 7 2.07V1h-.5A.5.5 0 0 1 6 .5m2.5 5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9zM.86 5.387A2.5 2.5 0 1 1 4.387 1.86 8.04 8.04 0 0 0 .86 5.387M11.613 1.86a2.5 2.5 0 1 1 3.527 3.527 8.04 8.04 0 0 0-3.527-3.527" />
                                </svg>
                                Court management
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="fixed top-0 left-64 z-10" style="width: calc(100% - 260px); float: right;">
            <div class="main" style="display: flex; justify-content: space-between; align-items: center">
                <img style=" width: 10%; height: 70%; margin-left: 20px;margin-top: 0.5%;" src="https://uploads.turbologo.com/uploads/design/hq_preview_image/499442/draw_svg20201116-31497-1tu3ppl.svg.png" />
                <a asp-page="/Auth/Logout" style="background-color: white; border: none; border-radius: 5px; height: 40%; margin-right: 20px;">Logout</a>
            </div>
        </div>
        <div class="body">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
