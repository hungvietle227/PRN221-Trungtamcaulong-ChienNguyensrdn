@page
@model BadmintonCenter.Presentation.Pages.Bookings.StableModel
@{
    ViewData["Title"] = "Booking Stable";
}

<link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />
<div class="container">
        <input id="userId" hidden value="@Model.Customer!.UserId" />
        <h1 class="text-center mb-2">BOOKING STATBLE</h1>
        <div class="text-center mb-4">
            <label><strong>Month:</strong>  </label>
            <input type="month" id="month" class="text-center" style="width: 100px" value="@DateTime.Now.ToString("yyyy-MM")" disabled>
        </div>
    <h3 class="text-center mb-2">DAY OF WEEK</h3>
    <div class="container d-flex justify-content-center align-items-center gap-4 mb-4">
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Monday">
            <label class="form-check-label">
                Monday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Tuesday">
            <label class="form-check-label">
                Tuesday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Wednesday">
            <label class="form-check-label">
                Wednesday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Thursday">
            <label class="form-check-label">
                Thursday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Friday">
            <label class="form-check-label">
                Friday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Saturday">
            <label class="form-check-label">
                Saturday
            </label>
        </div>
        <div class="form-check">
            <input class="dayOfWeek form-check-input" type="checkbox" value="Sunday">
            <label class="form-check-label">
                Sunday
            </label>
        </div>
    </div>
        <h3 class="text-center mb-2">TIME SLOT</h3>
        <div class="mb-4">
            <div class="container-slot overflow-auto">
                @foreach (var item in Model.SlotTimes)
                {
                    <div id=@item.Id class="time-slot" price=@item.Price>@item.StartTime - @item.EndTime</div>
                }
            </div>
        </div>
        <h3 class="text-center mb-2">COURT</h3>
        <div class="container-court container d-flex justify-content-center align-items-center gap-4 mb-4">
            @foreach(var court in Model.Courts)
            {
                <div class="court form-check">
                    <input class="form-check-input" type="checkbox" value="@court.CourtId">
                    <label class="form-check-label">
                        @court.CourtName
                    </label>
                </div>
            }
        </div>
        <div class="d-flex flex-column gap-2 align-items-center justify-content-center text-center">
            @Html.AntiForgeryToken()
            <button id="book-court-btn" class="w-25"><strong>Booking</strong></button>
            <div id="payment-btn" class="btn btn-outline-info hover:text-light" hidden>
                <a asp-page="Detail" class="w-50 text-decoration-none text-dark">Go To Payment</a>
            </div>
            <p class="success-message" hidden></p>
        </div>
</div>

@section Scripts {
    <script src="~/js/booking-stable.js" asp-append-version="true"></script>
}